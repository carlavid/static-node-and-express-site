extends layout.pug

block content

  nav.nav
    a.back-link(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= `${project.project_name}`

        if project.description 
          each line in project.description.split('\n')
            if line.trim().startsWith('-')
              li.project-info-box!= line.replace(/^\s*-/, '')
            else 
              p!= line.replace(/\n/g, '<br>').trim()

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in project.technologies
            li= technology

        a.btn-link(href=`${project.live_link}`) Live Demo
        a.btn-link(href=`${project.github_link}`) GitHub Repo

    .project-img-box.box
      each image_url in project.image_urls 
        img.project-img(src=`${image_url}`, alt=`screenshot of ${project.project_name}`)

    nav.nav
      a.back-link(href='/')
        span &larr;
        |  Back
